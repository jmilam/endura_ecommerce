<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Admin?</th>
			<th />
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.name %></td>
				<td><%= user.email %></td>
				<td><%= user.admin %></td>
				<td>
					<%= link_to "Edit", edit_user_path(user.id) %> | <%= link_to "Delete", user_path(user.id), method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "New User", new_user_path, class: "btn btn-success pull-right" %>

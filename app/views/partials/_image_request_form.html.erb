 <div class="row">
	<div class="centered">
		<h1>Image Request Form</h1>
	</div>
</div>

<div class="row">
  <div class="col-md-3 col-md-offset-2">
    <b>Item Group</b>
    <%= select :types, "image_group", @image_groups[:groups].sort.map {|group| [group, group.gsub(" ", "_")]}, {prompt: '- Please Select -'}, {class: 'form-control ', id: "image_group"} %>
  </div>
  <div class="col-md-3 col-md-offset-1">
    <b>Item Sub Group</b>
     <%= select :types, "image_sub_group", @image_groups[:sub_groups].sort.map {|sub_group| [sub_group, sub_group.gsub(" ", "_")]}, {prompt: '- Please Select -'}, {class: 'form-control ', id: "image_sub_group"} %>
  </div>
</div>

<div class="row" style="margin-top:10px;">
	<% @images.each do |image| %>
  	<div class="col-sm-6 col-md-4">
  		<%= hidden_field_tag "#{image.group}", "#{image.group}", class: "#{image.group.downcase.gsub(" ", "_")} #{image.sub_group.downcase.gsub(" ", "_")}" %>
    	<div class="thumbnail">
      	<%= image_tag image.show_image, size: 70 %>
      	<p class="text-center product_name_container"><%= image.name %></p>
      	<p><div class="text-center item_cost"><%= hidden_field_tag :currency, 0 %></div></p>
      	<div class="col-md-10 col-md-offset-1 item_qty"><p class="text-center"><%= hidden_field_tag :qty, 1, class: "form-control text-center item_qty_input"%></p></div>
      	<div class="text-center"></div>
      	<div class='total_cost text-center'><%= hidden_field_tag '$0.00'%></div>
      	<div class="form-group notes col-md-10 col-md-offset-1">
      		<%= label_tag 'Image Type:' %>
      		<%= select :notes, nil, @file_formats.map {|file_format| file_format}, {}, {class: 'form-control '} %>
      	</div>
      	<p class="text-center"><%= link_to 'Add to Cart', nil, remote: true, class: 'btn btn-danger add_to_cart' %></p>
      	<div class="update_response text-center text-success"></div>
		  </div>
		</div>
		
	<% end %>
</div>

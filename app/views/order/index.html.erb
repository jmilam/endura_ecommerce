<% if @orders.count == 0 %>
	<div class="jumbotron">
		<div class="container text-center">
		  <h2>No Current Orders!</h2>
		  <p class="lead">You have no open orders. Please add items to your cart if you want to start a new order.</p>
		</div>
	</div>
<% else %>
	<div class="panel-group">
		<% @orders.each do |key, order_group| %>
			<div id="<%= OrderStatus.find(key).status %>" class="panel <%= @panel_colors[@counter] %>">
				<div class="panel-heading">
					<h3><%= OrderStatus.find(key).status %></h3>
				</div>
				<div class="panel-body">
					<table class="table table-striped">
						<thead>
								<th/>
								<th>Customer</th>
								<th>Sales Rep Group</th>
								<th class="text-center">Items in Cart</th>
								<th>Order Total</th>
								<th>Order Date</th>
								<th>Order Status</th>
								<th/>
						</thead>
						<tbody>
							<% order_group.each do |order| %>
								<% customer = Customer.find_by_id(order.customer_id) %>
					  		<tr>
					  			<td><%= order.id %></td>
					  			<td><%= customer.company_name unless customer.nil? %></td>
					  			<td><%= customer.rep_group unless customer.nil? %></td>
					  			<td class="text-center"><%= order.order_items.count %></td>
					  			<td><%= number_to_currency(order.sum) %></td>
					  			<td><%= order.created_at.strftime("%m/%d/%Y") %></td>
					  			<td><%= select_tag "order_status", options_for_select(@statuses, order.order_status.status), class: "form-control order_status", order_id: "#{order.id}" %></td>
					  			<% if order.order_complete %>
					  				<td><%= link_to 'View Order', order_path(order.id), class: 'btn btn-sm btn-warning' %></td>
					  			<% else %>
					  				<td><%= link_to 'Checkout', order_path(order.id), class: 'btn btn-sm btn-primary' %> <%= link_to 'Delete', order_path(order.	id)	, method: :delete, data: {confirm: "Are you sure you want to delete your current order? This will delete all items in 	your 	cart." }, style: "vertical-align:bottom;" %></td>
					  			<% end %>
					  		</tr>
					  	<% end %>
					  </tbody>
					</table>
				</div>
		  </div>
		  <% @counter += 1 %>
		<% end %>
	</div>
<% end %>